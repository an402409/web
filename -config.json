{
    "log": {
        "loglevel": "warning"
    }, 
    "inbounds": [
        {
            "listen": "0.0.0.0", 
            "port": 443,   //监听的端口
            "protocol": "vless", 
            "settings": {
                "clients": [
                    {
                        "id": "b2fd47a5-f86e-4843-859a-7a8add684b98", //此处为你的UUID
                        "level": 0, 
                        "email": "aa00@gal.com",
                        "flow":"xtls-rprx-direct"
                    }
                ], 
                "decryption": "none", 
                "fallbacks": [
                    {
                        "dest": 33222  //默认回落端口
                    }, 
                    {
                        "alpn": "h2", 
                        "dest": 33223  //https回落端口
                    }
                ]
            }, 
            "streamSettings": {
                "network": "tcp", 
                "security": "xtls", 
                "xtlsSettings": {
                    "serverName": "xx.xx.xx.crt",  //你的域名
                    "alpn": [
                        "h2", 
                        "http/1.1"
                    ], 
                    "certificates": [
                        {
                            "certificateFile": "/etc/ssl/private/xx.xx.xx.crt",
                            "keyFile": "/etc/ssl/private/xx.xx.xx.key"
                        }
                    ]
                }
            }
        }
    ], 
    "outbounds": [
        {
            "protocol": "freedom", 
            "settings": { }
        }
    ]
}